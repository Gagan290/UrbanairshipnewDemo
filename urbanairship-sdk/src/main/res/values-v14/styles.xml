<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Default banner text appearance -->
    <style name="InAppMessage.Banner.TextAppearance" parent="@android:style/TextAppearance.Small"/>

    <!-- Default theme for in-app message banners -->
    <style name="InAppMessage.Banner" parent="">
        <item name="bannerTextAppearance">@style/InAppMessage.Banner.TextAppearance</item>
        <item name="bannerActionButtonTextAppearance">@style/InAppMessage.Banner.TextAppearance</item>
        <item name="bannerPrimaryColor">@color/ua_iam_primary</item>
        <item name="bannerSecondaryColor">@color/ua_iam_secondary</item>
        <item name="optCardElevation">@dimen/ua_iam_banner_elevation</item>
        <item name="optCardCornerRadius">@dimen/ua_iam_banner_corner_radius</item>
    </style>

    <!-- Style for the banner card view -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner.Card" parent="Base.Widget.UrbanAirship.InAppMessage.Banner"/>

    <!-- Style for the banner's text -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner.Text" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.Text"/>

    <!-- Style for the banner's action button divider -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner.Divider" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.Divider"/>

    <!-- Style for the banner's dismiss button -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner.DismissButton" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.DismissButton"/>

    <!-- Style for the banner action buttons -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner.ActionButton" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButton"/>

    <!-- Style for the banner's action button container -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner.ActionButtonContainer" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButtonContainer"/>

    <!-- Base style for the banner view -->
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner" parent="">
        <item name="android:layout_width">@dimen/ua_iam_banner_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Base style for the banner's text -->
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.Text" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <!-- Base style for the banner's action divider -->
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- Base style for the banner's dismiss button -->
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.DismissButton" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">-12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ua_ic_close_white_18dp</item>
    </style>

    <!-- Base style for the banner action buttons -->
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Base style for the banner's action button container -->
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButtonContainer" parent="">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!-- Base style for the banner's text -->
    <style name="Widget.UrbanAirship.InAppMessage.Banner" parent="Base.Widget.UrbanAirship.InAppMessage.Banner">
        <item name="android:background">@drawable/ua_iam_background</item>
    </style>


    <!--- MESSAGE CENTER -->

    <!-- Item Container -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Container" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Container"/>
    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Container" parent="">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>

        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Item CheckBox -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.CheckBox" parent="Base.Widget.UrbanAirship.MessageCenter.Item.CheckBox"/>
    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.CheckBox" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Item Icon -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Icon" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Icon"/>
    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Icon" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:src">@drawable/ua_ic_image_placeholder</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Item Title -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Title" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Title"/>
    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Title" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLines">2</item>
    </style>

    <!-- Item Date -->
    <style name="Widget.UrbanAirship.MessageCenter.Item.Date" parent="Base.Widget.UrbanAirship.MessageCenter.Item.Date"/>
    <style name="Base.Widget.UrbanAirship.MessageCenter.Item.Date" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Message Center Style-->
    <style name="MessageCenter.Item.Title.TextAppearance" parent="@android:style/TextAppearance.Medium"/>
    <style name="MessageCenter.Item.Date.TextAppearance" parent="@android:style/TextAppearance.Small"/>
    <style name="MessageCenter.EmptyMessage.TextAppearance" parent="@android:style/TextAppearance.Small"/>
    <style name="MessageCenter.MessageNotSelected.TextAppearance" parent="@android:style/TextAppearance.Small"/>


    <style name="MessageCenter">
        <item name="messageNotSelectedText">@string/ua_message_not_selected</item>
        <item name="messageNotSelectedTextAppearance">@style/MessageCenter.MessageNotSelected.TextAppearance</item>

        <item name="messageCenterItemTitleTextAppearance">@style/MessageCenter.Item.Title.TextAppearance</item>
        <item name="messageCenterItemDateTextAppearance">@style/MessageCenter.Item.Date.TextAppearance</item>
        <item name="messageCenterEmptyMessageTextAppearance">@style/MessageCenter.EmptyMessage.TextAppearance</item>
        <item name="messageCenterItemIconEnabled">false</item>
        <item name="messageCenterEmptyMessageText">@string/ua_empty_message_list</item>
        <item name="messageCenterItemBackground">@drawable/ua_item_mc_background</item>
    </style>

</resources>

